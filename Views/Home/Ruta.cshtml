@model SSCASPEL.Models.RutaDetail

@{
    ViewData["Title"] = "Ruta";
    Layout = "~/Views/Home/Shared/_IndexLayout.cshtml";
}

<h1>Ruta</h1>

<div>
    <h4>Ruta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ruta.codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ruta.codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ruta.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ruta.nombre)
        </dd>
    </dl>
</div>
<div class="table-responsive">
    <div class="col-12">
        <table class="table table-sm table-striped table-hover border-bottom">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Codigo SAE
                    </th>
                    <th class="d-none d-lg-table-cell">
                        Nombre
                    </th>  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.detalle)
                {
                    <tr>
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            <a asp-action="Documento" asp-route-id="@item.id">@item.idclie</a>
                        </td>
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(modelItem => item.codigosae)
                        </td>
                        <td class="d-none d-lg-table-cell">
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.direccion)
                        </td>                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ruta.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
