@model SSCASPEL.Models.ReciboRev

@{
    ViewData["Title"] = "Recibo";
    Layout = "~/Views/Home/Shared/_IndexLayout.cshtml";
}

<h1>Recibo</h1>

<div>
    <h4>Recibo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Idclie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Idclie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Cliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Forma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Forma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Referencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Referencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Bancocq)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Bancocq)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Bancoin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Bancoin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encabezado.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encabezado.Total)
        </dd>
    </dl>
    <br/>
    <div class="table-responsive">
        <div class="col-12">
            <table class="table table-sm table-striped table-hover border-bottom">
                <thead>
                    <tr>
                        <th>
                            Factura
                        </th>
                        <th class="d-none d-lg-table-cell">
                            Fecha vencimiento
                        </th>
                        <th class="d-none d-lg-table-cell">
                            Saldo
                        </th>
                        <th>
                            Abono
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Detalle)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Refer)
                            </td>
                            <td class="d-none d-lg-table-cell">
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Saldo)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Abono)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Encabezado.Id">Edit</a> |
